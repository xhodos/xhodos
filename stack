function portIsInUse(string $host, int $port):bool
{
	$connection = @fsockopen($host, $port, $errno, $errstr, 1);
	if ($connection) {
		fclose($connection);
		return true; // Something is already using the port
	}
	return false;
}

function parseOptions(array $argv):array
{
	$options = [];
	for ($i = 0; $i < count($argv); $i++) {
		if (str_starts_with($argv[$i], '--')) {
			$key = ltrim($argv[$i], '-');
			$value = $argv[$i + 1] ?? true; // If no value, treat it as a flag
			if (!str_starts_with($value, '--')) {
				$options[$key] = $value;
				$i++; // Skip next arg (the value)
			} else {
				$options[$key] = true; // It's a flag (e.g., --verbose)
			}
		}
	}
	return $options;
}

$command = $argv[1] ?? NULL;
$options = parseOptions(array_slice($argv, 2)); // skip script name + command

switch ($command) {
	case 'serve':
		$host = $options['host'] ?? '127.0.0.1';
		$port = $options['port'] ?? '8000';
		
		if (portIsInUse($host, $port)) {
			echo "âŒ  Port $port on $host is already in use.\n";
			exit(1); // Exit with failure
		}
		
		echo "âœ…  Port $port on $host is available.\n";
		echo "ðŸš€ Starting server at http://$host:$port\n";
		passthru("php -S $host:$port public/index.php");
		break;
	
	case 'route:list':
		echo "ðŸ” Listing routes (demo):\n";
		// Placeholder â€“ you can scan a routes file here
		echo "GET /home\n";
		echo "POST /submit\n";
		break;
	
	/*case 'view:compile':
		echo "ðŸ“† Compiling views.\n";
		Compiler::compileAll();
		echo "âœ…  View compilation done.\n";
		break;*/
	
	case 'view:clear':
		echo "ðŸ§¼  Clearing view cache...\n";
		Compiler::clearCache();
		echo "âœ…  View cache cleared.\n";
		break;
	
	default:
		echo "âŒ  Unknown command.\n";
		echo "Usage:\n";
		echo "  php stack serve --host [host] --port [port]\n";
		echo "  php stack route:list\n";
		echo "  php stack view:compile\n";
		echo "  php stack view:clear\n";
		break;
}
